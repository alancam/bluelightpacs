{
  "name": "bluelightpacs",
  "version": "1.0.0",
  "private": true,
  "description": "Minimal test setup for bluelightpacs",
  "scripts": {
    "test": "vitest --run",
    "test:watch": "vitest",
    "build:index": "node tools/build-dicom-index.js --dir ./dicoms --base /dicoms/ --out ./dicoms.index.json",
    "build:index:split": "node tools/build-dicom-index.js --dir ./dicoms --base /dicoms/ --out ./dicoms.index.json --splitDir ./dicoms.index"
  },
  "devDependencies": {
    "dicom-parser": "^1.8.21",
    "jsdom": "^24.1.3",
    "vitest": "^1.6.1"
  }
}
